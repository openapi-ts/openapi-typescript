{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceRoot": ".",
    "jsx": "react-jsx",
    "target": "ES2022",
    "types": ["vitest/globals"]
  },
  "include": ["src", "test", "*.ts"],
  "exclude": ["node_modules"]
}
