{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["example/*", "tests/**/*"]
}
